<div class="container">
  <h1>Review your experience at <%= @dive_site.name %></h1>
  <%= simple_form_for [@dive_site, @review] do |f| %>
    <%= f.input :rating, collection: 0..5, input_html: {data: {controller: "star-rating"}} %>
    <%= f.input :highlight %>
    <%= f.input :tips %>
    <div class="text-center">
      <%= f.submit "Submit review", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

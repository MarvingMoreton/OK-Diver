<div class="container py-5 d-flex justify-content-center">
  <div data-controller="create-site-map"
    data-create-site-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>" style="width:800px">
    <%= simple_form_for @dive_site do |f| %>
    <%# <p>If you know the GPS co-ordinates of your dive enter them here, or pinpoint your dive site on the map below</p> %>
    <p class="text-center">Use the search bar to locate your dive site, or pinpoint it on the map below.</p>
      <%= f.input :latitude, as: :hidden, input_html: { data: { create_site_map_target: "latitude" } } %>
      <%= f.input :longitude, as: :hidden, input_html: { data: { create_site_map_target: "longitude" } } %>
    <div style="width: 100%; height: 600px;"
      data-create-site-map-target="map">
      </div>
<div>
      <%= f.input :country %>
      <%= f.input :city %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :dive_type, collection: DiveSite::TYPE %>
      <%= f.input :level, collection: DiveSite::PROFICIENCY %>
      <%= f.input :tag, collection: Tag.all, input_html: { multiple: true }, include_hidden: false %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <div class="text-end py-5">
      <%= f.submit :"Create Dive Site", class: 'register-button' %>
      </div>
    <% end %>
  </div>
</div>
</div>

<div class="container py-5 d-flex justify-content-center">
  <div data-controller="create-site-map"
    data-create-site-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    <%= simple_form_for(@dive_site, method: @dive_site.id ? :put : :post) do |f| %>
    <p class="text-center">Pinpoint your dive site on the map below</p>
      <%= f.input :latitude, :as => :hidden, input_html: { data: { create_site_map_target: "latitude" } } %>
      <%= f.input :longitude, :as => :hidden, input_html: { data: { create_site_map_target: "longitude" } } %>
    <div class="border-radius" style="width: 100%; height: 600px;"
      data-create-site-map-target="map">
  </div>
<div class="pt-3">
      <%= f.input :country %>
      <%= f.input :city %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :dive_type, collection: DiveSite::TYPE %>
      <%= f.input :level, collection: DiveSite::PROFICIENCY %>
      <%= f.input :tags, collection: Tag.all, input_html: { multiple: true }, include_hidden: false, as: :check_boxes, input_html: { class: "form-tag-selector" }, item_wrapper_class: 'form-tag-item'  %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <div class="text-end py-5">
        <%= f.submit :"Create Dive Site", class: 'register-button' %>
      </div>
      <%= hidden_field_tag 'breadcrumb', params[:breadcrumb] %>
    </div>
    <% end %>
  </div>
</div>

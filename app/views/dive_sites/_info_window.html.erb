<% if dive_site.photos.attached? %>
  <%= cl_image_tag dive_site.photos.first.key, :height=>150, :width=>200, :crop=>"fill" %><br>
<% else %>
  <img src="<%= dive_site.image %>" width="200" height="150">
<% end %>
<h2><%= dive_site.name %></h2>
<p><%= dive_site.country %></p>
<p><%= dive_site.level %></p>
<%= link_to "Details", dive_site_path(dive_site) %>
